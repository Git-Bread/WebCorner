    "test": "npm run build && node lib/test-cleanup.js"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^13.3.0",
    "firebase-functions": "^6.3.2"
  },
  "devDependencies": {
    "rimraf": "^5.0.1",
    "typescript": "^5.0.4"
  },
  "private": true
}
