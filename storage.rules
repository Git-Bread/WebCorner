rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions for content validation
    function isImageType(contentType) {
      return contentType.matches('image/.*');
    }
    
    function isFileSizeUnder(maxSizeMB) {
      return request.resource.size < maxSizeMB * 1024 * 1024;
    }

    // Allow anyone to read profile images
    match /profile_images/{userId}/{fileName} {
      allow read: if true;  // Allow read access to all users
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && isImageType(request.resource.contentType)
        && isFileSizeUnder(5);  // Limit to 5MB image uploads
    }
    
    // User documents - private files
    match /user_documents/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // For all other files, require authentication
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;  // By default, restrict writes unless explicitly allowed
    }
  }
}