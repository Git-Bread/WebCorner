rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions for content validation
    function isImageType(contentType) {
      return contentType.matches('image/.*');
    }
    
    function isFileSizeUnder(maxSizeMB) {
      return request.resource.size < maxSizeMB * 1024 * 1024;
    }

    // Helper function to check server ownership by fetching from Firestore
    function isServerOwner(serverId) {
      return request.auth != null && 
             firestore.get(/databases/(default)/documents/servers/$(serverId)).data.ownerId == request.auth.uid;
    }

    // Profile Images
    match /profile_pictures/{userId}/{fileName} {
      allow read: if true;  // Allow read access to all users
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && isImageType(request.resource.contentType)
        && isFileSizeUnder(5);  // Limit to 5MB image uploads
      allow delete: if request.auth != null
                    && request.auth.uid == userId;  // Allow users to delete their own profile images
    }
    
    // Temporary server images (stored before server creation)
    match /temp_server_images/{userId}/{fileName} {
      allow read: if true;  // Allow read access to all users
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && isImageType(request.resource.contentType)
                   && isFileSizeUnder(5);  // Limit to 5MB image uploads
      allow delete: if request.auth != null
                    && request.auth.uid == userId;  // Only allow users to delete their own temp images
    }
    
    // Server Images - Updated to support server-specific folders
    match /server_images/{serverId}/{fileName} {
      // Only allow server owner to read images
      allow read: if isServerOwner(serverId);
      
      // Only allow server owner to write images (still checking type and size)
      allow write: if isServerOwner(serverId)
                   && isImageType(request.resource.contentType)
                   && isFileSizeUnder(5);  // Limit to 5MB image uploads
                   
      // Only allow server owner to delete images
      allow delete: if isServerOwner(serverId);
    }
    
    // User documents - private files
    match /user_documents/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // For all other files, require authentication
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;  // By default, restrict writes unless explicitly allowed
    }
  }
}