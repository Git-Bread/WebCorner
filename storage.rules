rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read profile images - this is important for unauthenticated previews
    match /profile_images/{userId}/{fileName} {
      allow read: if true;  // Allow read access to all users
      allow write: if request.auth != null && request.auth.uid == userId;  // Only allow write to own folder
    }
    
    // For all other files, require authentication
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;  // By default, restrict writes unless explicitly allowed
    }
  }
}